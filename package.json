{
  "name": "zurvan",
  "version": "0.5.1",
  "keywords": [
    "testing",
    "timeouts",
    "time",
    "timers",
    "fake time",
    "timer mocks",
    "timer stubs",
    "timer management",
    "faking timers",
    "event loop management",
    "fake timers",
    "setImmediate",
    "setInterval",
    "setTimeout",
    "process.uptime",
    "Date",
    "process.hrtime"
  ],
  "description": "A library for faking timers in Node.js",
  "author": "Tomasz Lewowski",
  "repository": {
    "type": "git",
    "url": "https://github.com/tlewowski/zurvan.git"
  },
  "devDependencies": {
    "bluebird": "^3.0.0",
    "browserify": "^16.1.1",
    "codeclimate-test-reporter": "^0.5.0",
    "grunt": "~1.0.1",
    "grunt-cli": "~1.2.0",
    "grunt-istanbul": "~0.8.0",
    "grunt-mocha-istanbul": "~5.0.1",
    "istanbul": "^0.4.0",
    "jshint": "~2.9.2",
    "karma": "^2.0.0",
    "karma-browserify": "^5.1.1",
    "karma-mocha": "^1.3.0",
    "karma-phantomjs-launcher": "^1.0.4",
    "madge": "^3.0.1",
    "mocha": "^5.0.2",
    "watchify": "^3.9.0"
  },
  "optionalDependencies": {
    "bluebird": "^3.0.0"
  },
  "bugs": "https://github.com/tlewowski/zurvan/issues",
  "engines": {
    "node": ">=4.0.0"
  },
  "license": "MIT",
  "scripts": {
    "test": "mocha --recursive tests examples",
    "browser-tests": "karma start",
    "coverage": "grunt mocha_istanbul",
    "madge": "madge -c . -x node_modules",
    "jshint": "jshint --exclude node_modules,coverage .",
    "ci": "npm run-script madge && npm run-script tests && grunt mocha_istanbul"
  },
  "main": "zurvan.js"
}
